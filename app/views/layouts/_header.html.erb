<style type="text/css">

nav {
    position: fixed !important;
    z-index: 99;
    top: 0;
    left: 0;
    width: 100%;
    height: 60px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, .2);
    padding: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

nav .fa-right-from-bracket{
  color: black;
}

/* profile menu */

.profile {
    position: relative;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 12px;
    cursor: pointer;
    text-align: end;
}

.profile h6 {
    text-align: end;
    line-height: 1;
    margin-bottom: 4px;
    font-weight: 600;
    color: white;
}

.profile p {
    line-height: 1;
    font-size: 14px;
    opacity: .6;
    color: white;
    margin: 0;
}

.profile .img-box {
    position: relative;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    overflow: hidden;
}

.profile .img-box img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    background: white;
}

/* menu (the right one) */

.navmenu {
    position: absolute;
    top: calc(100% + 4px);
    right: 16px;
    width: 200px;
    min-height: 100px;
    background: #fff;
    box-shadow: 0 10px 20px rgba(0, 0, 0, .2);
    opacity: 0;
    transform: translateY(-10px);
    visibility: hidden;
    transition: 300ms;
}

.navmenu::before {
    content: '';
    position: absolute;
    top: -10px;
    right: 14px;
    width: 20px;
    height: 20px;
    background: #fff;
    transform: rotate(45deg);
    z-index: -1;
}

.navmenu.active {
    opacity: 1;
    transform: translateY(0);
    visibility: visible;
    border-radius: 8px;
}

/* menu links */

.navmenu ul {
    position: relative;
    display: flex;
    flex-direction: column;
    z-index: 10;
    background: #fff;
    padding-left: 0rem;
    border-radius: 8px;
    margin-top: 1rem;
}

.navmenu ul li {
    list-style: none;
}

.navmenu ul li:hover {
    background: #eee;
}

.navmenu ul li a {
    text-decoration: none;
    color: #000;
    display: flex;
    align-items: center;
    padding: 4px 20px;
    gap: 6px;
}

.navmenu ul li a i {
    font-size: 1.2em;
}
</style>

<script type="text/javascript">
  let profile = document.querySelector('.profile');
let menu = document.querySelector('.navmenu');

profile.onclick = function () {
    menu.classList.toggle('active');
}
</script>